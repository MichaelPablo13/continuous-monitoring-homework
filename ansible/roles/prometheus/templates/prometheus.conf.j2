global:
  scrape_interval: 15s
  rule_files:
    - /etc/prometheus/cpu.yml
    - /etc/prometheus/disco.yml
    - /etc/prometheus/memoria.yml
    - /etc/prometheus/portas.yml
scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']
  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets:
        - 'localhost:9100'
        